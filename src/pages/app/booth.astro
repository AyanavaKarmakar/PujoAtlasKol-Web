---
import Layout from '@/layouts/WebAppLayout.astro';
import { cn } from '@/libs/utils';
import { FaSquarePlus } from 'react-icons/fa6';
import { MdFireTruck } from 'react-icons/md';
import { MdLocalPolice } from 'react-icons/md';
import { IoMdSettings } from 'react-icons/io';
import { CiSearch } from 'react-icons/ci';
import { FaLocationArrow } from 'react-icons/fa';
import { FaAngleRight } from 'react-icons/fa';
---

<Layout>
  <main
    class={cn(
      'flex-1 flex flex-col gap-3 lg:gap-6 gap-y-3 lg:gap-y-2 pr-3 pl-4',
      //   'bg-primary-background' ,
      'lg:rounded-l-xl lg:shadow-l-xl overflow-y-auto scroll-smooth',
    )}
  >
    <div class="flex text-center justify-between pt-12">
      <div class="space-x-3">
        <span class="text-5xl mt-10">Pujo Atlas</span>
        <span class="bg-gray-300 rounded-xl p-2 text-xs">web</span>
      </div>
      <div>
        <IoMdSettings size={32} />
      </div>
    </div>

    <div class="pt-4">
      <div class="flex items-center border border-gray-300 bg-[#ebe5d9] rounded-full w-full p-3">
        <CiSearch size={'3rem'} />
        <input
          class="ml-2 p-2 outline-none w-full bg-transparent placeholder-slate-950 placeholder:text-lg"
          type="text"
          placeholder="Search"
        />
      </div>
    </div>

    <div class="rounded-xl bg-[#ede3ce] h-56 p-2">
      <div class="flex text-center space-x-2">
        <FaLocationArrow />
        <span class="text-xl"> Critical Services </span>
      </div>
      <div class="flex space-x-2 justify-between mt-4">
        <div class="border rounded-2xl border-gray-950 bg-[#fcfcfa] p-5 text-center">
          <FaSquarePlus size={'6rem'} />
          <span>Ambulance</span>
        </div>
        <div class="border rounded-2xl border-gray-950 bg-[#fcfcfa] p-5 text-center">
          <MdFireTruck size={'6rem'} />
          <span>Fire</span>
        </div>
        <div class="border rounded-2xl border-gray-950 bg-[#fcfcfa] p-5 text-center">
          <MdLocalPolice size={'6rem'} />
          <span class="">Police</span>
        </div>
      </div>
    </div>

    <div class="pt-5 text-2xl">
      <div class="">Other contacts</div>
      <br />
      <div class="flex justify-between pb-5 pt-2">
        <div>Text</div>
        <div><FaAngleRight /></div>
      </div>
      <hr />
      <div class="flex justify-between pb-5 pt-2">
        <div>Text</div>
        <div><FaAngleRight /></div>
      </div>
      <hr />
      <div class="flex justify-between pb-5 pt-2">
        <div>Text</div>
        <div><FaAngleRight /></div>
      </div>
      <hr />
    </div>
  </main>
</Layout>
