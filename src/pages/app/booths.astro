---
import Layout from '@/layouts/WebAppLayout.astro';
import { cn } from '@/libs/utils';
import { FaSquarePlus } from 'react-icons/fa6';
import { MdFireTruck, MdChevronRight } from 'react-icons/md';
import { IoMdSettings } from 'react-icons/io';
import { IoSearch } from 'react-icons/io5';
import { TbLocationFilled } from 'react-icons/tb';
import { PiSirenFill } from 'react-icons/pi';
---

<Layout>
  <main
    class={cn(
      'flex-1 flex flex-col gap-3 lg:gap-6 gap-y-3 lg:gap-y-2',
      'bg-secondary-background p-3 lg:p-4 lg:py-12 lg:px-20',
      'lg:rounded-l-xl lg:shadow-l-xl overflow-y-auto scroll-smooth font-sans',
    )}
  >
    <div class="flex flex-row items-center justify-between">
      <h2 class="font-work text-4xl font-medium text-left py-4">Pujo Atlas</h2>
      <IoMdSettings size="30" className="mb-1" />
    </div>

    <div
      id="searchbar"
      class="rounded-3xl mb-2 pl-2 flex flex-row items-center justify-start bg-[#e6dfcf]"
    >
      <IoSearch size="25" />
      <input
        type="text"
        id="search"
        name="search"
        placeholder="Search for pandals"
        class="w-full px-3 py-3 text-sm font-sans bg-[#e6dfcf] font-normal rounded-3xl focus:outline-none text0black"
      />
    </div>

    <div class="rounded-2xl bg-[#ede3ce] p-2">
      <div class="flex gap-x-2.5 text-center items-center">
        <div>
          <TbLocationFilled size="22" />
        </div>
        <div class="text-lg">Critical Services</div>
      </div>
      <div class="flex flex-row justify-evenly pt-5">
        <div class="flex flex-col items-center justify-center">
          <div class="rounded-2xl bg-[#fcfcfa] p-5 text-center items-center">
            <FaSquarePlus size="50" />
          </div>
          <span class="m-2">Ambulance</span>
        </div>
        <div class="flex flex-col items-center justify-center">
          <div class="rounded-2xl bg-[#fcfcfa] p-5 text-center">
            <MdFireTruck size="50" />
          </div>
          <span class="m-2">Fire</span>
        </div>
        <div class="flex flex-col items-center justify-center">
          <div class="rounded-2xl bg-[#fcfcfa] p-5 text-center">
            <PiSirenFill size="50" />
          </div>
          <span class="m-2">Police</span>
        </div>
      </div>
    </div>

    <div class="flex flex-col justify-center items-start px-1 pb-1 pt-5 gap-y-3">
      <div class="pb-1 text-2xl font-medium">Other Contacts</div>
      <div class="flex flex-col text-lg w-full">
        <div class="flex flex-row items-center justify-between w-full">
          <span>Text</span>
          <MdChevronRight size="35" />
        </div>
        <hr class="border-gray-950/10 border-2 w-full" />
      </div>
      <div class="flex flex-col text-lg w-full">
        <div class="flex flex-row items-center justify-between w-full">
          <span>Text</span>
          <MdChevronRight size="35" />
        </div>
        <hr class="border-gray-950/10 border-2 w-full" />
      </div>
      <div class="flex flex-col text-lg w-full">
        <div class="flex flex-row items-center justify-between w-full">
          <span>Text</span>
          <MdChevronRight size="35" />
        </div>
        <hr class="border-gray-950/10 border-2 w-full" />
      </div>
    </div>
  </main>
</Layout>
