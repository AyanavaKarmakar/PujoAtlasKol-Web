---
import { Carousel } from '@/components/Carousel';
import { PlaystoreIcon } from '@/icons';
import Layout from '@/layouts/Layout.astro';
import { cn } from '@/libs/utils';
---

<Layout>
  <main
    class={cn(
      'flex-1 flex flex-col gap-3 gap-y-3 lg:gap-y-0 lg:gap-6',
      'bg-primary-background p-3 lg:p-4 lg:py-12 lg:px-20',
      'rounded-l-xl shadow-l-xl overflow-y-auto',
    )}
  >
    <h1 class="font-work font-semibold text-[55px] lg:text-6xl pt-0 text-center lg:text-left">
      Pujo Atlas
    </h1>
    <p class="block lg:hidden font-work text-center leading-5">
      The most advanced <br /> pandal hopping experience<span class="animate-pulse">*</span>
    </p>
    <p class="hidden lg:block font-work text-left leading-normal">
      The most advanced pandal hopping experience<span class="animate-pulse">*</span>
    </p>
    <span class="flex justify-center items-center lg:block">
      <div
        class={cn(
          'text-xs py-1 px-4 outline outline-1',
          'rounded-xl w-fit flex items-center gap-2',
        )}
      >
        <PlaystoreIcon />
        <span class="font-semibold"> Google Play </span>
        <span>|</span>
        <span> Coming Soon </span>
      </div>
    </span>
    <div class="h-[500px]">
      <Carousel client:load client:only="react" />
    </div>
    <section
      class={cn(
        'w-full p-8 text-amber-950',
        'shadow-[2px_5px_1px_0px] shadow-amber-950',
        'border-4 border-amber-950 rounded-lg',
      )}
    >
      <span class={cn('font-work font-bold text-3xl', 'bg-orange-300 rounded-md px-1 py-0.5')}
        >What is Pujo Atlas?</span
      ><br /><br />
      <span class="font-sans font-semibold text-xl"
        >Pujo Atlas is your ultimate guide for Pandal Hopping during Durga Puja in Kolkata! This
        open-source project aims to provide a comprehensive and user-friendly webapp that lists all
        the Durga Pujas happening around Kolkata and offers a host of features to make your pandal
        hopping experience seamless and enjoyable.</span
      >
    </section>

    <div class="flex flex-row gap-4">
      <section
        class={cn(
          'w-full p-8 text-amber-950',
          'shadow-[2px_5px_1px_0px] shadow-amber-950',
