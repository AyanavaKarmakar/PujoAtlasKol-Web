---
import { Carousel } from '@/components/Carousel';
import Layout from '@/layouts/LandingPageLayout.astro';
import { cn } from '@/libs/utils';
import { FaChevronDown, FaAsterisk } from 'react-icons/fa';
import { IoMdInformationCircle } from 'react-icons/io';
---

<Layout>
  <main
    class={cn(
      'flex-1 flex flex-col gap-3 lg:gap-6 gap-y-3 lg:gap-y-2',
      'bg-primary-background p-3 lg:p-4 lg:py-12 lg:px-20',
      'lg:rounded-l-xl lg:shadow-l-xl overflow-y-auto scroll-smooth !overflow-x-clip',
    )}
  >
    <h1 class="font-alkatra font-semibold text-[55px] lg:text-6xl pt-0 text-center lg:text-left">
      পুজো অ্যাটলাস
    </h1>
    <p
      class="pt-0 lg:pt-4 pb-2 font-noto text-center lg:text-left leading-tight lg:leading-normal text-lg lg:text-lg"
    >
      আপনার প্যান্ডাল পরিক্রমা গাইড,&nbsp;<br class="block lg:hidden" />ভারতের সবচেয়ে মিষ্টি অংশের
      জন্য।
    </p>
    <!-- buttons on mobile screens -->
    <span
      class="font-noto flex lg:hidden flex-col gap-y-4 justify-center items-center lg:justify-start lg:items-start pt-2 lg:pt-0"
    >
      <span class="font-noto flex gap-x-3">
        <a class="rounded-md bg-black lg:hidden block" href="#features">
          <span
            class="flex -translate-x-1 -translate-y-1.5 rounded-md border-2 border-black bg-rose-300 p-2 text-base
          active:translate-x-0 active:translate-y-0
          transition-all font-semibold justify-center items-center"
          >
            <span class="pt-1 text-lg">বৈশিষ্ট্য</span>&nbsp;<span
              class="animate-arrow-up-down font-sans">&darr;</span
            >
          </span>
        </a>
        <a class="rounded-md bg-black lg:hidden block" href="/app">
          <span
            class="flex -translate-x-1 -translate-y-1.5 rounded-md border-2 border-black bg-amber-500 p-2 text-base
          active:translate-x-0 active:translate-y-0
          transition-all font-semibold justify-center items-center"
          >
            <span class="pt-1 text-lg">শুরু করুন</span>&nbsp;<span
              class="font-sans animate-arrow-left-right">-&gt;</span
            >
          </span>
        </a>
      </span>
    </span>
    <!-- info on large screens -->
    <span
      class={cn(
        'cursor-pointer mx-0 mt-0 mb-2 p-2 relative',
        'text-base font-noto font-semibold',
        'hidden lg:flex flex-row justify-start items-center w-fit',
        'shadow-[2px_5px_1px_0px] shadow-stone-950',
        'rounded-md border-2 border-black bg-rose-300 hover:bg-red-300',
      )}
      ><span class="flex justify-center items-center">
        <IoMdInformationCircle size="25" />&nbsp;&nbsp;<span class="mt-1 font-semibold text-base"
          >ওয়েব অ্যাপের অভিজ্ঞতা নিতে মোবাইলে খুলুন!
        </span>
      </span>
      <span id="notif-ping" class="absolute -top-1 -right-1 flex h-3 w-3">
        <span
          class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-90"
        ></span>
        <span class="relative inline-flex rounded-full h-3 w-3 bg-red-500"></span>
      </span>
    </span>
    <!-- carousel -->
    <div>
      <Carousel client:load client:only="react" />
      <a href="#features" aria-label="scroll to features section" class="hidden lg:block">
        <FaChevronDown className="h-8 lg:h-12 w-8 mx-auto motion-safe:animate-bounce" />
      </a>
    </div>
    <!-- feature cards -->
    <span id="features"></span>
    <section
      class={cn(
        'w-full h-full p-8 mt-0 lg:mt-auto text-amber-950 cursor-pointer',
        'bg-primary md:hover:bg-[#ffe5b0]',
        'shadow-[2px_5px_1px_0px] shadow-amber-950',
        'border-4 border-amber-950 rounded-lg',
        'transition-all duration-300 ease-in-out transform-gpu',
        'lg:hover:scale-[1.01] lg:hover:shadow-[2px_6px_2px_0px]',
        'font-noto flex flex-col gap-6 tracking-tight',
      )}
    >
      <h2
        class={cn(
          'font-bold !font-noto text-2xl md:text-3xl text-wrap',
          'bg-orange-300 rounded-md px-1 py-0.5 pt-2 w-fit',
        )}
      >
        পুজো অ্যাটলাস কি?
      </h2>
      <p class="!font-noto leading-snug text-lg lg:text-xl lg:leading-normal">
        <span class="font-semibold">পুজো অ্যাটলাস</span>&nbsp;হল দুর্গাপুজার সময় কলকাতায় প্যান্ডেল
        পরিক্রমার জন্য আপনার সর্বোত্তম গাইড! এই ওপেন-সোর্স প্রকল্পটি একটি বিস্তৃত এবং
        ব্যবহারকারী-বান্ধব ওয়েবসাইট সরবরাহ করার লক্ষ্য রাখে, যা কলকাতার আশেপাশে অনুষ্ঠিত সমস্ত
        দুর্গাপুজার তালিকা দেয় এবং আপনার প্যান্ডেল পরিক্রমার অভিজ্ঞতাকে সাবলীল ও আনন্দদায়ক করতে
        একাধিক বৈশিষ্ট্য অফার করে।
      </p>
    </section>

    <section class="flex flex-col lg:flex-row gap-4">
      <div
        class={cn(
          'w-full h-full p-8 text-amber-950 cursor-pointer',
          'bg-primary lg:hover:bg-[#ffe5b0]',
          'shadow-[2px_5px_1px_0px] shadow-amber-950',
          'border-4 border-amber-950 rounded-lg',
          'transition-all duration-300 ease-in-out transform-gpu',
          'lg:hover:scale-[1.01] lg:hover:shadow-[2px_6px_2px_0px]',
          'font-noto flex flex-col gap-6 tracking-tight',
        )}
      >
        <h2
          class={cn(
            'font-bold text-2xl md:text-3xl text-wrap',
            'bg-orange-300 rounded-md px-1 py-0.5 w-fit pt-2',
          )}
        >
          প্যান্ডেল তালিকা
        </h2>
        <ul class="text-lg lg:text-xl leading-snug lg:leading-normal flex flex-col gap-3">
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              বিভাগভিত্তিক তালিকা:&nbsp;
            </span> জনপ্রিয়তা, থিম এবং এলাকার উপর ভিত্তি করে প্যান্ডেলগুলি আবিষ্কার করুন।
          </li>
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              রেটিং এবং রিভিউ:&nbsp;
            </span> সেরা প্যান্ডেলগুলি বেছে নিতে ব্যবহারকারীর রেটিং এবং রিভিউ দেখে নিন।
          </li>
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              প্রিয় তালিকা:&nbsp;
            </span> দ্রুত অ্যাক্সেসের জন্য আপনার প্রিয় প্যান্ডেলগুলি সংরক্ষণ করুন।
          </li>
        </ul>
      </div>
      <div
        class={cn(
          'w-full h-full p-8 mt-0 lg:mt-auto text-amber-950 cursor-pointer',
          'bg-primary md:hover:bg-[#ffe5b0]',
          'shadow-[2px_5px_1px_0px] shadow-amber-950',
          'border-4 border-amber-950 rounded-lg',
          'transition-all duration-300 ease-in-out transform-gpu',
          'lg:hover:scale-[1.01] lg:hover:shadow-[2px_6px_2px_0px]',
          'font-noto flex flex-col gap-6 tracking-tight',
        )}
      >
        <h2
          class={cn(
            'font-bold text-2xl md:text-3xl text-wrap',
            'bg-orange-300 rounded-md px-1 py-0.5 w-fit pt-2',
          )}
        >
          ম্যাপ ইন্টিগ্রেশন
        </h2>
        <ul class="text-lg lg:text-xl leading-snug lg:leading-normal flex flex-col gap-3">
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              ইন্টারঅ্যাক্টিভ ম্যাপ:&nbsp;
            </span>
            ইন্টারঅ্যাক্টিভ ম্যাপের মাধ্যমে সমস্ত তালিকাভুক্ত প্যান্ডেলের অবস্থান দেখুন।
          </li>
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              ন্যাভিগেশন:&nbsp;
            </span> গণপরিবহন বা হাঁটার মাধ্যমে দিকনির্দেশনা এবং সেরা রুটগুলি পান।
          </li>
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              রিয়েল-টাইম ট্র্যাফিক আপডেট:&nbsp;
            </span> যানজট এড়িয়ে আরও সাবলীল প্যান্ডেল পরিক্রমার অভিজ্ঞতা উপভোগ করুন।
          </li>
        </ul>
      </div>
    </section>
    <section class="flex flex-col lg:flex-row gap-4">
      <div
        class={cn(
          'w-full h-full p-8 mt-0 lg:mt-auto text-amber-950 cursor-pointer',
          'bg-primary md:hover:bg-[#ffe5b0]',
          'shadow-[2px_5px_1px_0px] shadow-amber-950',
          'border-4 border-amber-950 rounded-lg',
          'transition-all duration-300 ease-in-out transform-gpu',
          'lg:hover:scale-[1.01] lg:hover:shadow-[2px_6px_2px_0px]',
          'flex flex-col gap-6 tracking-tight',
        )}
      >
        <h2
          class={cn(
            'font-bold !font-noto text-2xl md:text-3xl text-wrap',
            'bg-orange-300 rounded-md px-1 py-0.5 w-fit pt-2',
          )}
        >
          চিকিৎসা সহায়তা
        </h2>
        <ul
          class="!font-noto text-lg lg:text-xl leading-snug lg:leading-normal flex flex-col gap-3"
        >
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              নিকটবর্তী হাসপাতাল ও ক্লিনিক:&nbsp;
            </span>
            নিকটবর্তী স্বাস্থ্যসেবা প্রতিষ্ঠানের অবস্থান এবং যোগাযোগের বিবরণ খুঁজে পান।
          </li>
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              প্রাথমিক চিকিৎসার টিপস:&nbsp;
            </span>
            প্যান্ডেল পরিক্রমার সময় সাধারণ স্বাস্থ্য সমস্যা মোকাবিলায় প্রাথমিক চিকিৎসার টিপসগুলি পান।
          </li>
        </ul>
      </div>
      <div
        class={cn(
          'w-full h-full p-8 mt-0 lg:mt-auto text-amber-950 cursor-pointer',
          'bg-primary md:hover:bg-[#ffe5b0]',
          'shadow-[2px_5px_1px_0px] shadow-amber-950',
          'border-4 border-amber-950 rounded-lg',
          'transition-all duration-300 ease-in-out transform-gpu',
          'lg:hover:scale-[1.01] lg:hover:shadow-[2px_6px_2px_0px]',
          'flex flex-col gap-6 tracking-tight',
        )}
      >
        <h2
          class={cn(
            'font-bold !font-noto text-2xl md:text-3xl text-wrap',
            'bg-orange-300 rounded-md px-1 py-0.5 w-fit pt-2',
          )}
        >
          খাবার ও আহার
        </h2>
        <ul class="!font-noto text-lg lg:text-xl leading-snug lg:leading-normal">
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              নিকটবর্তী রেস্তোরাঁ:&nbsp;
            </span>
            প্যান্ডেলের আশেপাশের রেস্তোরাঁ এবং খাবারের স্টলগুলি আবিষ্কার করুন।
          </li>
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              খাবারের ধরন ও বিশেষত্ব:&nbsp;
            </span>
            স্থানীয় খাবার এবং অবশ্যই চেষ্টা করার মতো পদগুলি অন্বেষণ করুন।
          </li>
          <li>
            <span
              class={cn(
                'font-semibold bg-red-300 rounded-md px-[2px]',
                'py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap',
              )}
            >
              <FaAsterisk className="text-base" />
              ব্যবহারকারীর রিভিউ:&nbsp;
            </span>
            খাবারের জায়গাগুলির রেটিং এবং রিভিউ পড়ুন।
          </li>
        </ul>
      </div>
    </section>

    <section
      class={cn(
        'w-full h-full p-8 mt-0 lg:mt-auto text-amber-950 cursor-pointer',
        'bg-primary md:hover:bg-[#ffe5b0]',
        'shadow-[2px_5px_1px_0px] shadow-amber-950',
        'border-4 border-amber-950 rounded-lg',
        'transition-all duration-300 ease-in-out transform-gpu',
        'lg:hover:scale-[1.01] lg:hover:shadow-[2px_6px_2px_0px]',
        'font-noto flex flex-col gap-6 tracking-tight',
      )}
    >
      <h2
        class={cn(
          'font-bold text-2xl md:text-3xl text-wrap',
          'bg-orange-300 rounded-md px-1 py-0.5 w-fit pt-2',
        )}
      >
        উত্সবের হাইলাইটস
      </h2>
      <ul class="text-lg lg:text-xl leading-snug lg:leading-normal flex flex-col gap-3">
        <li>
          <span
            class="font-semibold bg-red-300 rounded-md px-[2px] py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap"
          >
            <FaAsterisk className="text-base" />
            সাংস্কৃতিক অনুষ্ঠান:&nbsp;
          </span>
          বিভিন্ন প্যান্ডেলে অনুষ্ঠিত সাংস্কৃতিক ইভেন্টগুলির আপডেট পেতে থাকুন।
        </li>
        <li>
          <span
            class="font-semibold bg-red-300 rounded-md px-[2px] py-0.5 pt-2 inline-flex items-center gap-1 whitespace-nowrap"
          >
            <FaAsterisk className="text-base" />
            ওয়ার্কশপ এবং প্রতিযোগিতা:&nbsp;
          </span>
          ওয়ার্কশপ, প্রতিযোগিতা, এবং অন্যান্য কার্যকলাপের বিস্তারিত তথ্য সংগ্রহ করুন।
        </li>
      </ul>
    </section>
  </main>
</Layout>
