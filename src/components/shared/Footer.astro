---
import { Socials } from '@/constants';
import { Image } from 'astro:assets';
---

<footer class="p-2 pt-3 lg:py-auto lg:h-[7.5vh]">
  <!-- Mobile Screen Footer -->
  <span class="flex lg:hidden flex-col justify-center items-center text-sm gap-y-1">
    <span class="w-full flex justify-evenly items-center">
      <a
        href={Socials.Discord}
        target="_blank"
        rel="noreferrer"
        class="font-semibold !text-blue-700 flex flex-row items-center justify-center gap-x-1"
      >
        <Image src="/socials/discord.svg" alt="Discord" height={100} width={100} />
      </a>&nbsp;|&nbsp;
      <a
        href={Socials.Reddit}
        target="_blank"
        rel="noreferrer"
        class="font-semibold !text-orange-700 flex flex-row items-center justify-center gap-x-1"
      >
        <Image src="/socials/reddit.svg" alt="Reddit" height={80} width={80} />
      </a>&nbsp;|&nbsp;
      <a
        href={Socials.GitHub}
        target="_blank"
        rel="noreferrer"
        class="font-semibold flex flex-row items-center justify-center gap-x-1"
      >
        <Image src="/socials/github.svg" alt="GitHub" height={80} width={80} />
      </a>
    </span>

    <div>
      Made with ❤️ by
      <a target="_blank" rel="noreferrer" href={Socials.GitHub} class="font-semibold">
        Pujo Atlas Kolkata
      </a>
    </div>

    <span class="w-full pt-1">
      <a href="https://www.netlify.com">
        <img
          class="w-full h-10"
          src="https://www.netlify.com/v3/img/components/netlify-light.svg"
          alt="Deploys by Netlify"
        />
      </a>
    </span>
  </span>

  <!-- Large Screen Footer -->
  <span class="hidden lg:flex h-full justify-between items-center ml-16">
    <span class="text-left">
      Made with ❤️ by
      <a target="_blank" rel="noreferrer" href={Socials.GitHub} class="font-semibold">
        Pujo Atlas Kolkata
      </a>
    </span>
    <span class="text-right flex flex-row gap-x-2">
      <span class="font-bold">Find us on:</span>
      <a
        href={Socials.Discord}
        target="_blank"
        rel="noreferrer"
        class="hover:underline hover:underline-offset-1 hover:decoration-2 hover:decoration-blue-600 flex flex-row items-center gap-x-2"
      >
        <Image src="/socials/discord.svg" alt="Discord" height={60} width={120} />
      </a>
      &nbsp;|&nbsp;
      <a
        href={Socials.Reddit}
        target="_blank"
        rel="noreferrer"
        class="hover:underline hover:underline-offset-1 hover:decoration-2 hover:decoration-orange-600 flex flex-row gap-x-2"
      >
        <Image src="/socials/reddit.svg" alt="Reddit" height={45} width={90} />
      </a>
    </span>
  </span>
</footer>
