---
import { cn } from '@/libs/utils';
import { MdHomeFilled, MdOutlineFestival } from 'react-icons/md';
import { PiSirenFill } from 'react-icons/pi';
const currentPath = Astro.url.pathname;
---

<nav class="flex flex-row items-center justify-around p-0 py-1 bg-gray-100/50">
  <a
    href="/app"
    aria-label="home"
    class={cn(currentPath === '/app' && 'bg-white/75', 'px-8 py-2 rounded-md')}
  >
    <span class="flex flex-col items-center justify-center gap-y-1">
      <MdHomeFilled className="h-5 w-5" />
      <span class="text-xs">Home</span>
    </span>
  </a>
  <a
    href="/pandals"
    aria-label="pandals"
    class={cn(currentPath === '/app/pandals' && 'bg-white/75', 'px-8 py-2 rounded-md')}
  >
    <span class="flex flex-col items-center justify-center gap-y-1">
      <MdOutlineFestival className="h-5 w-5" />
      <span class="text-xs">Pandals</span>
    </span>
  </a>
  <a
    href="/booths"
    aria-label="booths"
    class={cn(currentPath === '/app/booths' && 'bg-white/75', 'px-8 py-2 rounded-md')}
  >
    <span class="flex flex-col items-center justify-center gap-y-1">
      <PiSirenFill className="h-5 w-5" />
      <span class="text-xs">Booths</span>
    </span>
  </a>
</nav>
